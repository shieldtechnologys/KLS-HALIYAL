<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".about">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/college"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="6dp"
        android:textColor="@color/black"

        >

    </TextView>

    <RelativeLayout
        android:background="@drawable/bgforsinglerow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image1"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:cropToPadding="true"
            android:src="@drawable/bk"
            app:civ_border_color="#090909"
            app:civ_border_width="3dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="45dp">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/text1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/image1"
            android:text="Name:Bhojaraj kadam"
            android:textSize="23sp"
            android:layout_marginStart="5dp"
            android:textColor="@color/white"
            android:textStyle="bold">

        </TextView>
        <TextView
            android:id="@+id/text3"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/image1"
            android:text="Email:bhojarajk121@gmail.com"
            android:textSize="18dp">

        </TextView>
        <TextView
            android:id="@+id/instagramaPage"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F4511E"
            android:layout_below="@+id/text3"
            android:layout_toRightOf="@+id/image1"
            android:text="Follow on: bharat_0329"
            android:textSize="18dp">

        </TextView>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgforsinglerow"
        android:layout_marginTop="20dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image2"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginLeft="10dp"
            android:cropToPadding="true"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#090909"
            app:civ_border_width="3dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="45dp">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/text2"
            android:layout_marginLeft="6dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/image2"
            android:text="Name:Shrikant Kolekar"
            android:textSize="23dp"
            android:textStyle="bold">

        </TextView>
        <TextView
            android:id="@+id/text4"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_toRightOf="@+id/image2"
            android:text="Email:shrikantkolekar08@gmail.com"
            android:textSize="18dp">

        </TextView>
        <TextView
            android:id="@+id/instagramaPage1"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F4511E"
            android:layout_below="@+id/text4"
            android:layout_toRightOf="@+id/image2"
            android:text="@string/insta"
            android:textSize="18dp">

        </TextView>


    </RelativeLayout>


</LinearLayout>